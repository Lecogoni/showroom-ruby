
<div class="row">
    <div class="col-md-3">
        <%= link_to 'Back', posts_path, class: 'btn btn-secondary mb-3' %>
        <div class="card">
           <div class="card-body">
               <h4 class="card-title">Editing Post</h4>
               <%= render 'form', post: @post %>
           </div>
        </div>
    </div>
    <div class="col-md-9">

        <div class="mb-3">
            <%= form_with(model: [@post, @paragraph]) do |form| %>
                <%= form.hidden_field :element_type, value: 'paragraph' %>
                <%= form.submit "Paragraph", class: 'btn btn-primary' %>
            <% end %>
        </div>

        <div class="card p-2 pt-4">
            <div class="card-dody">
                <% @post.elements.each do |element| %>
                    <% if element.persisted? %> <!-- Means save in the database -->
                        <div class="mb-4 p-3 paragraph">

                            <div class="paragraph-content">
                                <% if element.content.present? %>
                                    <%= element.content %>
                                <% else %>
                                    click to add content
                                <% end %>
                            </div>

                            <div class="paragraph-form d-none">
                                <%= form_with(model: [@post, element]) do |form| %>
                                    <%= form.rich_text_area :content %>
                                    <div class="mt-3">
                                        <%= form.submit "Save", class: 'btn btn-primary' %>
                                        <a href="#" class="cancel btn btn-secondary">Cancel</a>
                                    </div>
                                <% end %>
                            </div>

                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>

    </div>
</div>





